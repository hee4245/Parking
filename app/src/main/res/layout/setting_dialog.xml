<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/setting">

    <LinearLayout
        android:id="@+id/setting_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/setting_header_margin_topbottom"
        android:layout_marginBottom="@dimen/setting_header_margin_topbottom">

        <Button
            android:id="@+id/setting_theme_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/setting_header_margin_side"
            android:layout_marginRight="@dimen/setting_header_margin_side"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/theme"
            android:textSize="@dimen/string_size_middle"
            android:background="@color/transparent"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/light_gray_stroke" />

        <Button
            android:id="@+id/setting_font_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/setting_header_margin_side"
            android:layout_marginRight="@dimen/setting_header_margin_side"
            android:gravity="center"
            android:layout_weight="1"
            android:text="@string/font"
            android:textSize="@dimen/string_size_middle"
            android:background="@color/transparent"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/setting_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/setting_footer"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <Button
            android:id="@+id/setting_ok"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/parking"
            android:text="@string/ok"
            android:textAllCaps="true"
            android:textSize="@dimen/string_size_small"
            android:textColor="@color/white" />

    </RelativeLayout>

</LinearLayout>